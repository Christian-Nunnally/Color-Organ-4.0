<rackItems:RackItemBase x:Class="AudioSpectrum.RackItems.SerialInterfaceItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:rackItems="clr-namespace:AudioSpectrum.RackItems"
             mc:Ignorable="d" d:DesignWidth="400" Height="39.5">
    <Border Height="40">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="40"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="EnableButton" Content="Enable Serial" Click="EnableButton_Click" Margin="10,10,0,10" />
            <Rectangle x:Name="EnabledIndicator" Grid.Column="1" Fill="#FF5555" Margin="10" Stroke="#666666" />
        </Grid>
    </Border>
</rackItems:RackItemBase>

