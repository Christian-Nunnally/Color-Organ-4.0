<UserControl x:Class="AudioSpectrum.FileWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="260">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Button x:Name="NewProjectButton" Content="New Project" Margin="5" FontSize="20" Click="NewProjectButton_Click"/>
        <Button x:Name="OpenProjectButton" Content="Open Project" Margin="5" FontSize="20" Grid.Row="1" Click="OpenProjectButton_Click"/>
        <Button x:Name="CloseProjectButton" Content="Close Project" Margin="5" FontSize="20" Grid.Row="2" Click="CloseProjectButton_Click"/>
    </Grid>
</UserControl>
